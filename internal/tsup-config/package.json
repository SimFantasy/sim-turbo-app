{
  "name": "@sim/tsup-config",
  "version": "1.0.0",
  "description": "tsup 公共构建配置包，供小型 TS 模块使用",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "tsup": ">=8.0.0"
  },
  "dependencies": {
    "tsup": "catalog:"
  },
  "devDependencies": {
    "@sim/eslint-config": "workspace:*",
    "@sim/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:"
  }
}
