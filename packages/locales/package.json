{
  "name": "@sim/locales",
  "version": "0.0.1",
  "description": "多语言包，提供中、英文语言配置和Naive UI多语言支持",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./zhCN": {
      "types": "./dist/zhCN/index.d.ts",
      "import": "./dist/zhCN/index.js"
    },
    "./enUS": {
      "types": "./dist/enUS/index.d.ts",
      "import": "./dist/enUS/index.js"
    },
    "./naive": {
      "types": "./dist/naive.d.ts",
      "import": "./dist/naive.js"
    }
  },
  "peerDependencies": {
    "naive-ui": ">=2.20.0",
    "vue-i18n": ">=11.0.0"
  },
  "dependencies": {
    "@sim/constants": "workspace:*",
    "@sim/utils": "workspace:*",
    "naive-ui": "catalog:",
    "vue-i18n": "catalog:"
  },
  "devDependencies": {
    "@sim/eslint-config": "workspace:*",
    "@sim/tsup-config": "workspace:*",
    "@sim/types": "workspace:*",
    "@sim/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:"
  }
}
