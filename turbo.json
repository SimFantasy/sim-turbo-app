{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "!**/*.md", "!**/*.test.*", "!**/*.spec.*"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "!**/*.md"]
		},
		"type-check": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "!**/*.md", "!**/*.test.*", "!**/*.spec.*"]
		},
		"clean": {
			"cache": false
		},
		"test": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "!**/*.md"],
			"outputs": ["coverage/**"]
		}
	},
	"globalDependencies": ["package.json", "pnpm-workspace.yaml", "turbo.json", ".gitignore"]
}
